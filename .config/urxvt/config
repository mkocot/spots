! fake transparency
URxvt.transparent: true
URxvt.inheritPixmap: true
URxvt.shading: 20
URxvt.fading:40

! real transparency
!URxvt*depth: 32
!urxvt*background: rgba:0000/0000/0000/BF00
!URxvt*background: rgba:2E00/3400/4000/F000

!#ifdef nord0
!URxvt*background: [90]nord0
!#endif

URxvt*fadeColor: [90]#000000

!URxvt.perl-lib: /usr/lib/urxvt/perl
!URxvt.perl-ext-common: default,matcher,clipboard,url-select,selection-to-clipboard
!URxvt.url-launcher: /usr/bin/firefox
!URxvt.matcher.button: 1

!URxvt.matcher.rend.0: Uline Bold #ac40ba
!URxvt.matcher.rend.1: Bold fg5

URxvt*scrollTtyOutput:      false
URxvt*scrollWithBuffer:     true
URxvt*scrollTtyKeypress:    true
URxvt.iso14755 : false
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0
URxvt.secondaryWheel: 1
URxvt.saveLines: 1000000
!URxvt*hlight.rend.0: fg:9 bg:6 Bold
